<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/text"
    android:orientation="vertical"
    android:weightSum="1">"

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_marginTop="0sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="341dp"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:layout_marginTop="0sp">
            <TextView
                android:id="@+id/reg_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="  返回" />

            <ImageView
                android:id="@+id/reg_ImageView01"
                android:layout_width="match_parent"
                android:layout_height="215dp"
                android:layout_marginLeft="0dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/hb"
                android:layout_gravity="center" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginRight="20sp"
        android:layout_marginTop="-100sp">

        <TextView
            android:id="@+id/reg_text_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="left|center"
            android:text="请输入手机号码:" />

        <EditText
            android:id="@+id/reg_edittext_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:background="@drawable/editshape"
            android:layout_gravity="bottom"
            android:maxLines="1"
            android:ems="10" >

            <requestFocus />
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginRight="20sp"
        android:layout_marginTop="10sp">

        <TextView
            android:id="@+id/reg_text_verifycode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="left|center"
            android:text="点击获取验证码:" />

        <EditText
            android:id="@+id/reg_edittext_verifycode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:background="@drawable/editshape"
            android:layout_gravity="bottom"
            android:maxLines="1"
            android:ems="10" >

            <requestFocus />
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginRight="20sp"
        android:layout_marginTop="10sp">

        <TextView
            android:id="@+id/reg_text_passwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="left|center"
            android:text="请输入密码:" />

        <EditText
            android:id="@+id/reg_edittext_passwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.66"
            android:background="@drawable/editshape"
            android:layout_gravity="bottom"
            android:inputType="textPassword"
            android:maxLines="1"
            android:ems="10" >

            <requestFocus />
        </EditText>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20sp"
        android:layout_marginTop="10sp">
        <TextView
            android:id="@+id/reg_text_repasswd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="left|center"
            android:text="请再次输入密码:" />
        <EditText
            android:id="@+id/reg_edittext_repasswd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.68"
            android:maxLines="1"
            android:inputType="textPassword"
            android:background="@drawable/editshape"
            android:ems="10" >
            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10sp">
        <Button
            android:id="@+id/reg_btn_reg"
            android:layout_width="100dp"
            android:background="@drawable/editshape"
            android:layout_height="wrap_content"
            android:text="注册" />

    </LinearLayout>
 </LinearLayout>